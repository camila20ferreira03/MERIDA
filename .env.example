# AWS Credentials - Local Development Only
# Copy this file to .env.local and fill in your AWS Academy credentials
# Source this file before running AWS/Terraform commands: source .env.local

export AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
export AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
export AWS_SESSION_TOKEN=YOUR_AWS_SESSION_TOKEN
export AWS_DEFAULT_REGION=us-east-1
export AWS_PROFILE=um_aws

# Add Python 3.11 to PATH for Terraform Lambda packaging
export PATH="/opt/homebrew/bin:$PATH"

# Instructions:
# 1. Get fresh credentials from AWS Academy Learner Lab > AWS Details
# 2. Copy this file: cp .env.example .env.local
# 3. Update .env.local with your credentials
# 4. Source the file: source .env.local
# 5. Run terraform: cd app/infra/terraform && terraform plan
